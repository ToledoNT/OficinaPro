generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Cliente {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  nome         String
  telefone     String
  isWhatsapp   Boolean
  cpf          String
  email        String?  
  endereco     Endereco
  observacoes  String
  dataCadastro DateTime @default(now())
}

type Endereco {
  rua     String
  numero  String
  bairro  String
  cidade  String
  estado  String
  cep     String
}

model Log {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  value     String
  createdAt DateTime @default(now())
}